    = javascript_include_tag 'application'
    = csrf_meta_tags
  %body{:class => "#{controller_full_name} #{action_name}"}
    %header
      = render 'layouts/navigation'
    %main{:role => "main"}
      = render 'layouts/messages'
      = yield
